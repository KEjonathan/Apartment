{
  "name": "apartment-management-system",
  "version": "1.0.0",
  "description": "Full-stack application for apartment management",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run client\" \"npm run server\"",
    "client": "cd client && npm start",
    "server": "cd backend && npm run dev",
    "install-all": "npm install && cd client && npm install && cd ../backend && npm install"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  }
} 